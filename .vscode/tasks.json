{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C++: Build Graphics File",
            "command": "g++",
            "args": [
                "--std",
                "c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                // "-lopengl32",
                "-lbgi",
                "-lgdi32",
                "-lcomdlg32",
                "-luuid",
                "-loleaut32",
                "-lole32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Specific build for files including graphics.h and gl.h"
        },
        {
            "type": "cppbuild",
            "label": "C++: Build File",
            "command": "g++",
            "args": [
                "--std",
                "c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe",
                "-I",
                "${workspaceFolder}/src/"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "close": true,
                "revealProblems": "never",
                "showReuseMessage": false,
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "detail": "No linking file compilation task",
        }
    ]
}